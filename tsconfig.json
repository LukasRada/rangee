{
    "include": ["src"],
    "compilerOptions": {
        "module": "CommonJS",
        "target": "ES6",
        "lib": ["dom", "dom.iterable", "esnext"],
        "declaration": true,
        "strict": true,
        "moduleResolution": "node",
        "jsx": "react",
        "esModuleInterop": true,
        "emitDeclarationOnly": true,
        "outDir": "lib",
        "rootDir": "src"
    }
}
